/home/mig/state/log/*.log /home/mig/state/log/*.out /home/mig/state/log/*.err {
	weekly
	missingok
	rotate 52
	compress
	delaycompress
	notifempty
	create 640 mig mig
	sharedscripts
	postrotate
           if [ -x /etc/init.d/migrid ]; then \
                /etc/init.d/migrid restart ; \
           elif [ -p /home/mig/mig/server/server.stdin ]; then \
               echo RELOADCONFIG >> /home/mig/mig/server/server.stdin; \
	   fi;
	endscript
}
