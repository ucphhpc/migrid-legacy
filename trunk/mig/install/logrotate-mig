/home/mig/mig/server/*.log /home/mig/mig/cgi-bin/*.log /home/mig/mig/cgi-sid/*.log {
	weekly
	missingok
	rotate 52
	compress
	delaycompress
	notifempty
	create 640 mig mig
	sharedscripts
	postrotate
           if [ -p /home/mig/mig/server/server.stdin ]; then \
               echo RELOADCONFIG >> /home/mig/mig/server/server.stdin; \
           elif [ -p /home/mig/mig/server/grid_stdin ]; then \
               echo RELOADCONFIG >> /home/mig/mig/server/grid_stdin; \
	   fi;
	endscript
}

